# SSO 서비스 환경변수 설정 파일
# 실제 사용 시 .env 파일로 복사하여 값들을 수정하세요

# 세션 관리
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
REDIS_PASSWORD=redis-password-change-this

# 데이터베이스 설정
DATABASE_URL=postgresql://sso_user:sso_password@localhost:5432/sso_db

# Redis 설정
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# CORS 설정
CORS_ORIGIN=http://localhost

# JWT 설정 (필요한 경우)
JWT_SECRET=jwt-secret-key-change-this
JWT_EXPIRES_IN=24h

# 애플리케이션 설정
NODE_ENV=development
PORT=3000

# 로깅 레벨
LOG_LEVEL=info

# 이메일 설정 (회원가입 인증 등에 사용)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SSL/HTTPS 설정 (프로덕션 환경)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# 보안 설정
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 세션 쿠키 설정
COOKIE_DOMAIN=.myapp.com
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_MAX_AGE=86400000

# 서비스 URL 설정
HOMEPAGE_SSO_SERVICE_URL=http://localhost:3000

# 서비스 자동 인식 설정
SERVICE_DISCOVERY_ENABLED=true
NETWORK_SCAN_ENABLED=true

# 네트워크 스캔 설정
DISCOVERY_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# 스캔할 포트 범위 (Docker 컨테이너 및 로컬)
SCAN_PORTS=3000,3001,3002,3003,3004,3005,8000,8080,9000
