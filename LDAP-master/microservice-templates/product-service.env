# 제품 관리 서비스 환경변수 템플릿
# docker-compose.microservices.yml에서 사용

# ================================
# 기본 설정
# ================================
NODE_ENV=development
PORT=3000
SERVICE_NAME=product-service

# ================================
# OIDC 클라이언트 설정
# ================================
OIDC_ISSUER=http://sso-provider:3000/oidc
OIDC_CLIENT_ID=product-service-client
OIDC_CLIENT_SECRET=product-service-client-secret-change-in-production

# ================================
# 인증 서비스 연결
# ================================
AUTH_SERVICE_URL=http://auth-service:3000
SSO_BASE_URL=http://localhost:3002

# ================================
# 세션 및 Redis 설정
# ================================
SESSION_SECRET=your-microservice-session-secret-change-in-production
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis-password-change-this

# ================================
# 서비스 간 통신
# ================================
USER_SERVICE_URL=http://user-service:3000
PRODUCT_SERVICE_URL=http://product-service:3000
ORDER_SERVICE_URL=http://order-service:3000

# ================================
# 데이터베이스 (PostgreSQL)
# ================================
DATABASE_URL=postgresql://product_service:password@postgres:5432/product_db

# ================================
# 로깅 및 모니터링
# ================================
LOG_LEVEL=info
ENABLE_SERVICE_DISCOVERY=true

# ================================
# 보안 설정
# ================================
CORS_ORIGIN=http://localhost:3004,http://localhost
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# 헬스체크
# ================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ================================
# 제품 서비스 특화 설정
# ================================
PRODUCT_CACHE_TTL=3600000  # 1시간
INVENTORY_CHECK_ENABLED=true
PRICE_UPDATE_INTERVAL=300000  # 5분
